<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo" xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx.xsd">

    <dubbo:application name="simpleService1" />

    <dubbo:registry address="zookeeper://127.0.0.1:2181" client="curator"/>

    <dubbo:tracker address="zipkin://127.0.0.1:9411" transport="http" samplerate="1.0"/>

    <bean id="service1" class="com.nightawk.test.service.FirstServiceImpl">
        <property name="secondService" ref="service2"/>
    </bean>

    <!-- provider-->
    <dubbo:protocol name="dubbo" port="20884"/>

    <dubbo:protocol name="hessian" port="8890" client="okHttpClient"/>

    <dubbo:service interface="com.nightawk.test.service.FirstService" ref="service1" protocol="dubbo" cluster="failover" timeout="5000"/>

    <dubbo:reference id="service2" interface="com.nightawk.test.service.SecondService" check="false"/>
</beans>
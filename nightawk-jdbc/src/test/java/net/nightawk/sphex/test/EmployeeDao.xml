<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.nightawk.sphex.test.EmployeeDao">

    <resultMap id="BaseResultMap" type="net.nightawk.sphex.test.Employee">
        <result column="id" property="id" jdbcType="INTEGER"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="zip" property="zip" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="getEmployees" resultMap="BaseResultMap">
        SELECT ID, NAME, ZIP from employee
    </select>

    <select id="getEmployee" resultType="net.nightawk.sphex.test.Employee">
        SELECT ID, NAME, ZIP from employee WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="net.nightawk.sphex.test.Employee">
        INSERT INTO employee (id, name, zip ) VALUES (#{id}, #{name}, #{zip})
    </insert>

    <insert id="batchInsert" parameterType="list">
        INSERT INTO employee
        VALUES
        <foreach collection="list" separator="," index="index" item="employee">
            (
            #{employee.id},
            #{employee.name},
            #{employee.zip}
            )
        </foreach>
    </insert>
</mapper>